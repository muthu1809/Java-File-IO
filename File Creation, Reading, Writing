		// Listing Only specific files
		File file = 
	new File("/home/arulnirai/Documents/HTML");
	File[] files =		file.listFiles();
	for(File ff: files)		//krishna
	{
		if(ff.isFile())
		{
		String fileName = ff.getName();
		//
		if(fileName.endsWith("html"))
		{
			System.out.println(fileName);
		}
	}
		
